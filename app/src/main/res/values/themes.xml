<resources>
    <!-- Base application theme. -->
    <style name="Theme.GayatriLadiesWears" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/offWhite</item>
        <item name="colorPrimaryVariant">@color/pink</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.GayatriLadiesWears.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.GayatriLadiesWears.AppBarOverlay" parent="Theme.MaterialComponents.DayNight.NoActionBar" />

    <style name="Theme.GayatriLadiesWears.PopupOverlay" parent="Theme.MaterialComponents.DayNight.NoActionBar" />

    <style name="ProgressBarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/pink</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@color/offWhite</item>
        <item name="android:colorAccent">@color/offWhite</item>
        <item name="android:textColorPrimary">@color/offWhite</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/offWhite</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/offWhite</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@animator/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@animator/slide_out_bottom</item>
    </style>


</resources>